@using SampleMVC.Models;
@model BookModel
@{
    ViewData["Title"] = "GetBook";
    Layout = "_Layout";
}
<div class="container">
    <h3 class="display-4">Book Details</h3>
    <div class="row">
        <div class="col-md-12">
            <h1>@Model.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-primary">
            <span class="label label-primary">By: </span>
            <span class="monospaced">@Model.Author</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="description">
                @Model.Description
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <button class="btn btn-outline-primary">Read Now</button>
        </div>
    </div>
</div>